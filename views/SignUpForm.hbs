<form action="/" method="POST">
    <div id="Header">
        <h1>"Tipme" Sign Up Form</h1>
        <h3>Please Register to begin using Tipme</h3>
    </div>
    
    <div id="form">
        <p><label for="First">First Name: </label>
        <input type="text" name="first"></p>
    

        <p><label for="Last">Last Name: </label>
        <input type="text" name="last"><br></p>

        <p><label for="Email">E-mail Address: </label>
        <input type="text" name="email"><br></p>

        <p><label for="Phone">Phone: </label>
        <input type="text" name="phone"><br></p>
     </div>
    
    <div>
        <button type="submit">Submit</button>
    </div>
</form>